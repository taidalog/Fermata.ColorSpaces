<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Fermata.ColorSpaces</PackageId>
    <Version>0.1.1</Version>
    <Authors>taidalog</Authors>
    <Company />
    <Description>F# library for operations related to color spaces. Compatible with Fable.</Description>
    <PackageProjectUrl>https://github.com/taidalog/Fermata.ColorSpaces</PackageProjectUrl>
    <PackageTags>F#; FSharp; fable; color; space; helper; library; functional; programming</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Copyright (c) 2024 taidalog</Copyright>
    <RepositoryUrl>https://github.com/taidalog/Fermata.ColorSpaces.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Fermata.ColorSpaces.fsi" />
    <Compile Include="Fermata.ColorSpaces.fs" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="*.fsproj; *.fs; *.fsi; *.js" PackagePath="fable\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fermata" Version="0.7.0" />
  </ItemGroup>

</Project>
